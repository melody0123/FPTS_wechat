<!--pages/login/login.wxml-->
<view class="content">
  <image class="background" src="../../images/LoginBackground.jpg"></image>
  <text class="h1">用户登录</text>
  <form class="loginBox" bindsubmit="loginFun">
    <view class="section">
        <input name="username" placeholder="请输入账号" value="admin" placeholder-style="color: white"/>
    </view>
    <view class="section">
        <input name="password" password="true" placeholder="请输入密码" value="admin123" placeholder-style="color: white"/>
    </view>
    <view class="validateCodeSection">
        <input name="validateCode" placeholder="请输入验证码" placeholder-style="color: white"/>
        <image src="{{imgUrl}}" bindtap="refreshValidateCode"/>
    </view>
    <button class="loginButton" form-type="submit">登录</button>
  </form>
    <text class="bottomText" style="left: 113rpx; top: 331rpx">没有账号？</text>
    <button class="registerButton" bindtap="toRegisterPage">立即注册</button>
    <text class="bottomText" style="left: 113rpx; top: 106rpx">或者</text>
    <button class="textMessageLoginButton" bindtap="toTextMessageLoginPage">短信验证码登录</button>
</view>

