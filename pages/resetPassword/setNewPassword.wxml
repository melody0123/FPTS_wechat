<!--pages/resetPassword/setNewPassword.wxml-->
<view class="content">
  <image class="background" src="../../images/LoginBackground.jpg"></image>
  <text class="h1">设置新密码</text>
  <form class="loginBox" bindsubmit="submitResetRequest">
    <view class="section">
        <input name="validateCode" placeholder="请输入发往邮箱的验证码" placeholder-style="color: white"/>
    </view>
    <view class="section">
        <input name="newPassword" password="true" placeholder="请输入新密码" placeholder-style="color: white"/>
    </view>
    <view class="section">
        <input name="confirmNewPassword" password="true" placeholder="请确认新密码" placeholder-style="color: white"/>
    </view>
    <button class="confirmButton" form-type="submit">确认</button>
  </form>
</view>
