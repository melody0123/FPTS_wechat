<wxs module="tradingRecord">
  var numToString = function(array) {
    if (array = "0"){
      var productType = "A股";
    }
    else if (array = "1"){
      var productType = "B股";
    }
    else if (array = "2"){
      var productType = "债券";
    }
    else if (array = "3"){
      var productType = "基金";
    }
    return productType;
  }
  module.exports.numToString = numToString;
</wxs>
